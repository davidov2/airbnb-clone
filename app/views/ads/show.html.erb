
<h1 class="text-center">Voici les détails de votre vol :</h1>

<div class="padded">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <%= cl_image_tag @ad.photo, height: 300, width: 400, crop: :fill %>
      </div>
      <div class="col-xs-12 col-md-6">
          <p><strong>Annonce mise en ligne par :</strong> "<%= @ad.user.name %>"</p>
          <p><strong>Description de l'annonce :</strong><br><%= @ad.description %></p>
          <p><strong>Prix : </strong><%= @ad.price %>€</p>
          <p><strong>Date : </strong><%= @ad.flight_date %></p>
          <div class="btn-group padded-product">

            <%= link_to "Réservez dès maintenant", "#", :class => "btn btn-danger" %>
<!--             <%= link_to "Retour à l'accueil", root_path, :class => "btn btn-danger" %> <-->      </div>



            <% if current_user.name == @ad.user.name %>
               <div class="padded-product">
                <%= link_to "Modifier mon annonce", ads_path, :class => "btn btn-danger" %>
               </div>
              <div class="padded-product">
                <%= link_to "Supprimer cette annonce", ad_path, method: :delete, :class => "btn btn-warning" %>
              </div>
            <% end %>



        </div>
      </div>
    </div>
  </div>
</div>



<div class="container">
  <div class="row">
    <div id="map" style="width: 100%; height: 600px;"></div>
  </div>
</div>




<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).on('ready', function() {
      handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function(){
        markers = handler.addMarkers(<%= raw @markers.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });
    })
  <% end %>
 <% end %>



